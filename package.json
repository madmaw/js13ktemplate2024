{
  "name": "js13ktemplate2024",
  "version": "1.0.0",
  "main": "index.js",
  "watch": {
    "glslx": {
      "patterns": [
        "glslx"
      ],
      "extensions": "glslx",
      "quiet": false
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack serve --mode development",
    "prod": "webpack serve --mode production",
    "build": "webpack --mode production",
    "roadroller": "mkdirp dist/roadroller && roadroller dist/webpack/bundle.js -o dist/roadroller/bundle.js",
    "inline": "copyfiles --flat dist/webpack/index.html dist/roadroller && inliner dist/roadroller/index.html > dist/index.html",
    "zip": "advzip -4 -a dist/index.zip dist/index.html && dir dist\\index.zip",
    "dist": "npm run glslx:dist && npm run build && npm run roadroller && npm run inline && npm run zip",
    "lint": "eslint src",
    "glslx": "glslx glslx/overlay.glslx --output=src/shaders/overlay.js --format=js --renaming=internal-only --pretty-print && glslx glslx/crt_bend.glslx --output=src/shaders/crt_bend.js --format=js --renaming=internal-only --pretty-print && glslx glslx/crt_pixelate.glslx --output=src/shaders/crt_pixelate.js --format=js --renaming=internal-only --pretty-print",
    "glslx:watch": "npm-watch glslx",
    "glslx:dist": "glslx glslx/overlay.glslx --output=src/shaders/overlay.js --format=js && glslx glslx/crt_bend.glslx --output=src/shaders/crt_bend.js --format=js && glslx glslx/crt_pixelate.glslx --output=src/shaders/crt_pixelate.js --format=js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@dprint/dockerfile": "=0.3.0",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.1.0",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/node": "^20.14.11",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "advzip-bin": "^2.0.0",
    "closure-webpack-plugin": "^2.6.1",
    "copy-webpack-plugin": "^12.0.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-dprint-integration": "^0.3.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-newlines": "^1.4.0",
    "eslint-plugin-lingui": "^0.3.0",
    "eslint-plugin-no-autofix": "^2.0.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "file-loader": "^6.2.0",
    "glslx": "^0.3.0",
    "google-closure-compiler": "^20240317.0.0",
    "html-inline-script-webpack-plugin": "^3.2.1",
    "html-webpack-plugin": "^5.6.0",
    "inliner": "^1.13.1",
    "mkdirp": "^3.0.1",
    "npm-watch": "^0.13.0",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "roadroller": "^2.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.5.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}
