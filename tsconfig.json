{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build",
    "paths": {
      "shaders/*": ["../gen/shaders/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["dist", "externs.js"],
  "include": [
    "biome.json",
    "eslint.config.d.ts",
    "eslint.config.mts",
    "externs.js",
    "tsconfig.json",
    "package.json",
    "webpack.config.js",
    "src/**/*.ts",
    "gen/**/*.ts"
  ]
}
